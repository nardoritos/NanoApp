<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NanoApp.Homepage"
			 Title="Início">
	<AbsoluteLayout>
		<BoxView BackgroundColor="#FFAD01"
					 AbsoluteLayout.LayoutBounds="0,0,1,150"
					 AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"/>
		<Grid AbsoluteLayout.LayoutBounds="0.5,75,200,100"
			  AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100"/>
				<ColumnDefinition Width="65"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="15"/>
				<RowDefinition Height="15"/>
				<RowDefinition Height="15"/>
			</Grid.RowDefinitions>
			<Image Source="https://cdn.onlinewebfonts.com/svg/img_299586.png"
					   Aspect="AspectFit"
					   Grid.RowSpan="3"
					   Grid.Row="0"
					   Grid.Column="0"/>
			<Label Text="Texto 1"
					   Grid.Column="1"
					   Grid.Row="0"/>
			<Label Text="Texto 2"
					   Grid.Column="1"
					   Grid.Row="1"/>
			<Label Text="Texto 3"
					   Grid.Column="1"
					   Grid.Row="2"/>
		</Grid>

	</AbsoluteLayout>
</ContentPage>