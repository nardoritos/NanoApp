<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NanoApp.Homepage"
			 xmlns:flex="clr-namespace:Flex.Controls;assembly=Flex"
			 Title="Início">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="150"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackLayout BackgroundColor="#FFAD01"
					 Grid.Row="0">
			<Grid VerticalOptions="CenterAndExpand"
				  HorizontalOptions="CenterAndExpand">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="100"/>
					<ColumnDefinition Width="80"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="15"/>
					<RowDefinition Height="15"/>
					<RowDefinition Height="15"/>
				</Grid.RowDefinitions>
				<Image Source="https://cdn.onlinewebfonts.com/svg/img_299586.png"
					   Aspect="AspectFit"
					   Grid.RowSpan="3"
					   Grid.Row="0"
					   Grid.Column="0"/>
				<Label Text="Fulano de Tal"
					   Grid.Column="1"
					   Grid.Row="0"/>
				<Label Text="Cargo"
					   Grid.Column="1"
					   Grid.Row="1"/>
				<Label Text="Nome da Obra"
					   Grid.Column="1"
					   Grid.Row="2"/>
			</Grid>
		</StackLayout>
		<StackLayout Orientation="Horizontal" HorizontalOptions="Center" Grid.Row="1">
			
		
		</StackLayout>
	</Grid>
</ContentPage>